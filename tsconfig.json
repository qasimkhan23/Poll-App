{
    "compilerOptions": {
      "target": "ES6",
      "module": "ES6",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "baseUrl": "./src",
      "moduleResolution": "Node",
      "jsx": "react-jsx",
      "allowSyntheticDefaultImports": true,
      "outDir": "./dist",
      "resolveJsonModule": true
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
  }
  